@using System.Security.Claims

@{
    bool IsAuthenticated = base.User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrafficPoliceApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrafficPoliceApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand site-logo" </a>TrafficPolice.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                    @if(User.Identity.IsAuthenticated)
                    {

                            if (((ClaimsIdentity)User.Identity).HasClaim(c => c.Type == "Admin" && c.Value == "true"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Index" asp-controller="Admin">Add Fines</a>
                                </li>
                            }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Fine">Fines</a>
                        </li>
                    }
                        <li class="nav-item">
                            <a class="nav-link" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ContactUs" asp-controller="Home">Contact Us</a>
                        </li>
                        @if(User.Identity.IsAuthenticated){
                            <li class="nav-item">
                            <a class="nav-link" asp-action="UserInfo" asp-controller="User">Profile</a>
                        </li>
                        }
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="username-text">@User.Identity.Name</span>
                        <form asp-controller="Identity" asp-action="Logout" method="post">
                            <span class="material-symbols-outlined logout-icon">
                                <a asp-controller="Identity" asp-action="Logout">logout</a>
                            </span>
                        </form>
                    }
                    
                    else
                    {
                        <div class="d-flex login-button">
                            <span class="material-symbols-outlined">
                                <a asp-action="Login" asp-controller="Identity">login</a>
                            </span>
                        </div>
                        <div class="d-flex reg-button">
                            <span class="material-symbols-outlined">
                                <a asp-action="Register" asp-controller="Identity">how_to_reg</a>
                            </span>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
