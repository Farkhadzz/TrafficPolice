@{
    ViewData["Title"] = "Register";
    string email = string.Empty;
    string password = string.Empty;
    string firstname = string.Empty;
    string lastname = string.Empty;
    int age = 0;
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>

<form asp-action="Register" method="post" class="animate__animated animate__fadeInUp">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="main-form ard bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
              <p class="text-white-50 mb-5">Please fill out the registration form</p>

              <div class="form-outline form-white mb-4">
                <input asp-for="@email" type="email" id="typeEmailX" class="form-control form-control-lg" />
                <label asp-for="@email" class="form-label" for="typeEmailX">Email</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="@firstname" type="text" id="typefistnameX" class="form-control form-control-lg" />
                <label asp-for="@firstname" class="form-label" for="typefistnameX">Firstname</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="@lastname" type="text" id="typelastnameX" class="form-control form-control-lg" />
                <label asp-for="@lastname" class="form-label" for="typelastnameX">Lastname</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="@age" type="text" id="typeageX" class="form-control form-control-lg" />
                <label asp-for="@age" class="form-label" for="typeageX">Age</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="@password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                <label asp-for="@password" class="form-label" for="typePasswordX">Password</label>
              </div>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

            <div>
              <p class="mb-0">Already have an account? <a asp-action="Login" class="text-white-50 fw-bold">Sign In</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>